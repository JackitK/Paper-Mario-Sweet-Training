	NOP
	LH			A0, 436 (S0)
	SB			R0, 213 (S0)
	JAL			800479A0
	SB			R0, 212 (S0)
	.o4C
	LB			V0, 214 (S0)
	BEQ			V0, R0, .o60
	NOP
	SB			R0, 215 (S0)
	SB			R0, 214 (S0)
	.o60
	LB			V0, 218 (S0)
	BEQ			V0, R0, .o74
	NOP
	SB			R0, 219 (S0)
	SB			R0, 218 (S0)
	.o74
	%Cool effects
	/%
	MFC1      A1, F26
	MFC1      A2, F24
    MFC1      A3, F20	
	%/
	LW		  A1, 144 (S0)
	LW		  A2, 148 (S0)
	LW		  A3, 14C (S0)
	LI        A0, 3			%subtype 3 = vanish?
	LI        V0, 1E		%duration? (30 -> 15)
	LIF		  F22, 1.4				%scale?
	SWC1      F22, 10 (SP)
	JAL       80070BB0
	SW        V0, 14 (SP)
	LW        V1, C (V0)
	ADDIU     A0, R0, FF                %R
	SB        A0, 68 (V1)
	LW        V1, C (V0)
    ADDIU     A0, R0, C0                %G
	SB        A0, 69 (V1)
	LW        V1, C (V0)
	ADDIU     A1, R0, 00                %B
	SB        A1, 6A (V1)
	LW        A0, C (V0)
	ADDIU     V1, R0, FF                %R 2
	SB        V1, 6B (A0)
	LW        A0, C (V0)
	ADDIU     V1, R0, EF                %G 2
	SB        V1, 6C (A0)
	LW        V1, C (V0)
    ADDIU     A1, R0, D0                %B 2
	SB        A1, 6D (V1)   	
	%Done with stuff
	LI		  V0, 2
	JPOP		S0, S1, S2, S3, RA
